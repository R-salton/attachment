
{
  "entities": {
    "Report": {
      "title": "Report",
      "description": "The main entity for an operational report.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string", "description": "The UID of the user who owns this report." },
        "reportDate": { "type": "string" },
        "dayNumber": { "type": "integer", "description": "The day number of the attachment." },
        "unit": { "type": "string", "enum": ["Gasabo DPU", "Kicukiro DPU", "Nyarugenge DPU", "TRS", "SIF", "TFU", "ORDERLY REPORT"] },
        "reportTitle": { "type": "string" },
        "reportingCommanderName": { "type": "string" },
        "reportingCommanderTitle": { "type": "string" },
        "fullText": { "type": "string" },
        "images": { 
          "type": "array", 
          "items": { "type": "string" }, 
          "description": "Up to 4 images stored as base64 data URIs."
        },
        "status": { "type": "string", "enum": ["DRAFT", "SUBMITTED"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "ownerId", "reportTitle", "createdAt", "unit"]
    },
    "Article": {
      "title": "Article",
      "description": "An article submission for the cadet magazine.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "cadetName": { "type": "string" },
        "company": { "type": "string", "enum": ["Alpha", "Bravo", "Charlie"] },
        "platoon": { "type": "string", "enum": ["1", "2", "3"] },
        "content": { "type": "string" },
        "imageUrl": { "type": "string", "description": "Base64 data URI of the cadet's image." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "cadetName", "company", "platoon", "content", "createdAt"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "User account metadata and role assignments.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["ADMIN", "TRAINEE", "LEADER", "COMMANDER"] },
        "unit": { "type": "string", "enum": ["Gasabo DPU", "Kicukiro DPU", "Nyarugenge DPU", "TRS", "SIF", "TFU", "ORDERLY REPORT"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "unit"]
    }
  },
  "auth": {
    "providers": ["google.com", "password", "anonymous"]
  },
  "firestore": {
    "/reports/{reportId}": {
      "schema": "Report",
      "description": "Collection of operational reports."
    },
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User role and profile data."
    },
    "/articles/{articleId}": {
      "schema": "Article",
      "description": "Collection of cadet magazine articles."
    }
  }
}
