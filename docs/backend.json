
{
  "entities": {
    "Report": {
      "title": "Report",
      "description": "The main entity for an operational report.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string", "description": "The UID of the user who owns this report." },
        "reportDate": { "type": "string" },
        "unit": { "type": "string", "enum": ["Gasabo DPU", "Kicukiro DPU", "Nyarugenge DPU", "TRS", "SIF", "TFU", "N/A"] },
        "reportTitle": { "type": "string" },
        "reportingCommanderName": { "type": "string" },
        "reportingCommanderTitle": { "type": "string" },
        "fullText": { "type": "string" },
        "status": { "type": "string", "enum": ["DRAFT", "SUBMITTED"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "ownerId", "reportTitle", "createdAt", "unit"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "User account metadata and role assignments.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["ADMIN", "TRAINEE", "LEADER", "COMMANDER"] },
        "unit": { "type": "string", "enum": ["Gasabo DPU", "Kicukiro DPU", "Nyarugenge DPU", "TRS", "SIF", "TFU", "N/A"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "unit"]
    }
  },
  "auth": {
    "providers": ["google.com", "password", "anonymous"]
  },
  "firestore": {
    "/reports/{reportId}": {
      "schema": "Report",
      "description": "Collection of operational reports."
    },
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User role and profile data."
    }
  }
}
