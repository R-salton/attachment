rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CADET COMMANDER REPORTING SYSTEM - SECURITY RULES
     * 
     * This ruleset implements an Ownership-Based Access Control model.
     * All operational reports are owned by the creator (ownerId).
     * 
     * Deployment Trigger: 2024-02-18 10:45 UTC - Ensuring list permissions for /reports are live
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- MASTER DATA RULES ---

    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /operationalUnits/{unitId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /roles_cadet_commanders/{commanderId} {
      allow get: if isOwner(commanderId);
      allow list, write: if false;
    }

    // --- REPORTING HIERARCHY RULES ---

    match /reports/{reportId} {
      // Simplified read rules to cover both get and list for authenticated users.
      // The application logic handles filtering by ownerId in the query.
      allow read: if isSignedIn();
      
      // Mutations restricted to the owner
      allow create: if isOwner(request.resource.data.ownerId);
      allow update: if isOwner(resource.data.ownerId) && request.resource.data.ownerId == resource.data.ownerId;
      allow delete: if isOwner(resource.data.ownerId);

      // --- SUBCOLLECTIONS ---
      // Nested rules inherit or specify ownership based on the denormalized ownerId.

      match /companyOperationalReports/{reportDetailId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.ownerId);
        allow update: if isOwner(resource.data.ownerId) && request.resource.data.ownerId == resource.data.ownerId;
        allow delete: if isOwner(resource.data.ownerId);

        match /activityItems/{itemId} {
          allow read: if isSignedIn();
          allow create: if isOwner(request.resource.data.ownerId);
          allow update: if isOwner(request.resource.data.ownerId);
          allow delete: if isOwner(request.resource.data.ownerId);
        }

        match /emphasisPoints/{itemId} {
          allow read: if isSignedIn();
          allow create: if isOwner(request.resource.data.ownerId);
          allow update: if isOwner(request.resource.data.ownerId);
          allow delete: if isOwner(request.resource.data.ownerId);
        }

        match /postCaseReports/{postId} {
          allow read: if isSignedIn();
          allow create: if isOwner(request.resource.data.ownerId);
          allow update: if isOwner(request.resource.data.ownerId);
          allow delete: if isOwner(request.resource.data.ownerId);

          match /caseDetails/{caseId} {
            allow read: if isSignedIn();
            allow create: if isOwner(request.resource.data.ownerId);
            allow update: if isOwner(request.resource.data.ownerId);
            allow delete: if isOwner(request.resource.data.ownerId);
          }
        }
      }

      match /challenges/{itemId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.ownerId);
        allow update: if isOwner(request.resource.data.ownerId);
        allow delete: if isOwner(request.resource.data.ownerId);
      }

      match /recommendations/{itemId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.ownerId);
        allow update: if isOwner(request.resource.data.ownerId);
        allow delete: if isOwner(request.resource.data.ownerId);
      }

      match /otherActivities/{itemId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.ownerId);
        allow update: if isOwner(request.resource.data.ownerId);
        allow delete: if isOwner(request.resource.data.ownerId);
      }
    }
  }
}