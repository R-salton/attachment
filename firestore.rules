rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'nezasalton@gmail.com';
    }

    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : {};
    }

    function isCommander() {
      return isSignedIn() && (
        isAdmin() || 
        (getUserData().role == 'COMMANDER')
      );
    }

    function isLeader() {
      return isSignedIn() && (
        isCommander() || 
        (getUserData().role == 'LEADER')
      );
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email'])));
      allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Visibility: Admin, Commander, and Leaders see all. Trainees see their unit only.
      allow read: if isSignedIn() && (
        isAdmin() || 
        isLeader() || 
        (getUserData().unit == resource.data.unit)
      );
      
      // Everyone who is signed in can create reports
      allow create: if isSignedIn();
      
      // Leaders and above can edit any report. Trainees can edit reports in their unit.
      allow update: if isSignedIn() && (
        isAdmin() || 
        isLeader() || 
        (getUserData().unit == resource.data.unit)
      );
      
      allow delete: if isAdmin() || isCommander();
    }
  }
}