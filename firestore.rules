
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'nezasalton@gmail.com' ||
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1' ||
        getProfile().role == 'ADMIN'
      );
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /reports/{reportId} {
      // 1. SYSTEM-WIDE ADMIN BYPASS
      // Admins have unrestricted access to all operations.
      allow read, write: if isAdmin();

      // 2. LIST ACCESS
      // Allow Leaders and Commanders to list reports (global queries).
      // Allow standard users to list reports if the query includes a filter (enforced by the 'if' condition on query results).
      allow list: if isSignedIn() && (
        getProfile().role in ['ADMIN', 'COMMANDER', 'LEADER'] ||
        resource.data.unit == getProfile().unit
      );

      // 3. GET ACCESS (Single Document)
      allow get: if isSignedIn() && (
        getProfile().role in ['ADMIN', 'COMMANDER', 'LEADER'] ||
        resource.data.unit == getProfile().unit ||
        resource.data.ownerId == request.auth.uid
      );
      
      // 4. CREATION
      allow create: if isSignedIn();
      
      // 5. MODIFICATION
      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.unit == getProfile().unit ||
        resource.data.ownerId == request.auth.uid
      );
      
      // 6. DELETION
      allow delete: if isSignedIn() && (
        isAdmin() ||
        getProfile().role in ['COMMANDER', 'LEADER']
      );
    }
  }
}
