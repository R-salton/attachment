/**
 * @fileoverview Firestore Security Rules for the Report Master application.
 *
 * Core Philosophy:
 * This ruleset prioritize secure data access based on user identity.
 *
 * Deployment Trigger: 2024-02-18 14:45 UTC - Force redeploy to fix /reports list permissions.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper to check if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Helper to check if the user is the owner of the document.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Master data for companies.
     */
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // For setup/admin purposes
    }

    /**
     * @description Master data for operational units.
     */
    match /operationalUnits/{unitId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    /**
     * @description Commander role check.
     */
    match /roles_cadet_commanders/{commanderId} {
      allow get: if isOwner(commanderId);
      allow list, write: if false;
    }

    /**
     * @description Main reports collection.
     * We allow any authenticated user to list/get reports.
     * Creation and modification are strictly tied to ownership.
     */
    match /reports/{reportId} {
      // Explicitly allow list and get for signed-in users.
      // The application logic handles filtering by ownerId in the query.
      allow read: if isSignedIn();
      
      // Allow creation if the ownerId in the data matches the authenticated user.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow updates/deletes only for the owner.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Recursive match for all subcollections (activities, cases, etc.)
      match /{allSubcollections=**} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && (
          (resource != null && resource.data.ownerId == request.auth.uid) ||
          (resource == null && request.resource.data.ownerId == request.auth.uid)
        );
      }
    }
  }
}