
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // System admin email check
      return isSignedIn() && request.auth.token.email == 'nezasalton@gmail.com';
    }

    function isLeader() {
      // Check if admin OR if user has the LEADER role in their profile
      return isSignedIn() && (
        isAdmin() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'LEADER')
      );
    }

    // User profiles
    match /users/{userId} {
      // Allow users to read their own profile or admins to read all
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      
      // Allow profile creation. Special case for the admin email to be LEADER immediately.
      allow create: if isSignedIn() && request.auth.uid == userId && (
        (request.auth.token.email == 'nezasalton@gmail.com' && request.resource.data.role == 'LEADER') ||
        (request.resource.data.role == 'TRAINEE')
      );
      
      // Allow admins to update roles, or users to update their own data (excluding role changes)
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId && request.resource.data.role == resource.data.role);
      
      allow delete: if isAdmin();
    }

    // Reports collection
    match /reports/{reportId} {
      // All signed-in users can read/list reports
      allow read: if isSignedIn();
      
      // Only Leaders/Admins can create/update/delete
      allow create: if isLeader() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isLeader() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }
  }
}
