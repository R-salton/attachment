rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CADET COMMANDER REPORTING SYSTEM - SECURITY RULES
     * 
     * This ruleset implements an Ownership-Based Access Control model.
     * All operational reports are owned by the creator (ownerId).
     * 
     * Deployment Trigger: 2024-02-18 15:45:00 - Explicit list permission fix.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Master lookup data
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /operationalUnits/{unitId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Reports collection
    match /reports/{reportId} {
      // allow 'get' and 'list' for the owner. 
      // Firestore enforces that 'list' queries must include the 'ownerId' filter.
      allow read: if isSignedIn() && (resource == null || resource.data.ownerId == request.auth.uid);
      
      // Allow creation if the user sets themselves as the owner
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow update/delete only by the owner
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Allow recursive access to subcollections for the owner
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() && 
          (get(/databases/$(database)/documents/reports/$(reportId)).data.ownerId == request.auth.uid);
      }
    }
  }
}