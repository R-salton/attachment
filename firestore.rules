/**
 * @fileoverview Firestore Security Rules for the Cadet Commander Reporting System.
 * 
 * Core Philosophy:
 * This ruleset implements ownership-based access control while allowing
 * authenticated users to read and list the reports collection.
 *
 * Deployment Trigger: 2024-02-18 20:30 UTC - Explicitly granting list and get for all auth users to resolve permission errors.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper to check if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Helper to check if the user is the owner.
     */
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    /**
     * @description Master data (Companies, Units).
     */
    match /companies/{id} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /operationalUnits/{id} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    /**
     * @description Reports collection.
     */
    match /reports/{reportId} {
      // Explicitly allow list and get for all authenticated users.
      // This is necessary because the application queries this collection filtered by ownerId.
      allow get, list: if isSignedIn();
      
      // Allow creation only if the ownerId matches the authenticated user.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow updates/deletes only for the owner.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Recursive match for all report subcollections.
      match /{allSubcollections=**} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && (
          (resource != null && resource.data.ownerId == request.auth.uid) ||
          (resource == null && request.resource.data.ownerId == request.auth.uid)
        );
      }
    }

    /**
     * @description Role checks.
     */
    match /roles_cadet_commanders/{uid} {
      allow get: if isOwner(uid);
      allow list, write: if false;
    }
  }
}