
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // ABSOLUTE MASTER BYPASS
    // Prioritizing the owner's UID and email for zero-latency, unrestricted access.
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1' || 
        request.auth.token.email == 'nezasalton@gmail.com'
      );
    }

    function isAdmin() {
      return isMasterAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN'
      );
    }

    function isHighCommand() {
      return isAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'COMMANDER' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'LEADER')
      );
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /reports/{reportId} {
      // 1. GLOBAL COMMAND ACCESS (Master Bypass)
      // Admins have unrestricted access to read, list, and write (create/update/delete)
      allow read, list, write: if isAdmin();
      
      // 2. REGULAR OPERATIONAL ACCESS
      // Regular units can access reports if they belong to that unit.
      allow get: if isHighCommand() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        resource.data.unit == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unit
      );
      
      allow list: if isHighCommand() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (resource == null || resource.data.unit == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unit)
      );
      
      // 3. FILING PROTOCOL
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }
  }
}
