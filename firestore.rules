
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'nezasalton@gmail.com';
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCommander() {
      return isSignedIn() && (isAdmin() || getUserData().role == 'COMMANDER');
    }

    function isLeader() {
      return isSignedIn() && (isCommander() || getUserData().role == 'LEADER');
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && (
        (request.auth.uid == userId) || isAdmin()
      );
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId && request.resource.data.role == resource.data.role);
      allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Visibility: Admin and Commander see all. Others see their unit only.
      allow read: if isSignedIn() && (
        isAdmin() || 
        isCommander() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && resource.data.unit == getUserData().unit)
      );
      
      // Creation: Any signed in user can create (though UI usually restricts to Leader+)
      allow create: if isSignedIn();
      
      // Update: per request "each user must be able to edit any report" (within visibility scope)
      allow update: if isSignedIn() && (
        isAdmin() || 
        isCommander() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && resource.data.unit == getUserData().unit)
      );
      
      allow delete: if isAdmin() || isCommander();
    }
  }
}
