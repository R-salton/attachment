rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'nezasalton@gmail.com' ||
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN'
      );
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /reports/{reportId} {
      // 1. GLOBAL COMMAND ACCESS
      // Administrators have absolute visibility and control over the entire archive.
      // Explicitly allowing list and get to avoid broad query permission errors.
      allow list, get, create, update, delete: if isAdmin();

      // 2. OPERATIONAL READ ACCESS
      // Allow authenticated personnel to list and read reports. 
      // Filtering is enforced at the application level to maintain unit focus.
      allow list: if isSignedIn() && (
        isAdmin() || 
        resource.data.unit == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unit
      );

      allow get: if isSignedIn() && (
        isAdmin() || 
        resource.data.unit == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unit
      );
      
      // 3. CREATION & MODIFICATION
      allow create: if isSignedIn();
      
      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.ownerId == request.auth.uid
      );
      
      // 4. DELETION
      // Deletion is a high-command operation restricted to Administrators.
      allow delete: if isAdmin();
    }
  }
}