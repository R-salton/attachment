rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'nezasalton@gmail.com' ||
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1'
      );
    }

    function getProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /reports/{reportId} {
      // 1. ABSOLUTE ADMIN BYPASS
      // This ensures the Administrator can always query and manage all reports globally.
      allow read, write: if isAdmin();

      // 2. READ ACCESS for Leaders and Commanders
      // This allows authorized personnel to view reports beyond their own unit.
      allow read: if isSignedIn() && getProfile().role in ['COMMANDER', 'LEADER'];

      // 3. UNIT-LOCKED ACCESS for Trainees
      // Standard personnel can only read reports filtered by their own unit.
      allow read: if isSignedIn() && resource.data.unit == getProfile().unit;
      
      // 4. CREATION
      allow create: if isSignedIn();
      
      // 5. MODIFICATION
      allow update: if isSignedIn() && (
        resource.data.unit == getProfile().unit ||
        resource.data.ownerId == request.auth.uid
      );
      
      // 6. DELETION (Leaders and above)
      allow delete: if isAdmin() || (isSignedIn() && getProfile().role in ['COMMANDER', 'LEADER']);
    }
  }
}