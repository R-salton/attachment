
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'nezasalton@gmail.com';
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isLeader() {
      return isSignedIn() && (getUserRole() == 'LEADER' || isAdmin());
    }

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      // Admin can update roles, users can create their own profile as TRAINEE
      allow update: if isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.role == 'TRAINEE';
    }

    // Reports collection
    match /reports/{reportId} {
      // Leaders and Admins can view and list all reports
      allow read: if isLeader();
      
      // Leaders can create reports
      allow create: if isLeader() && request.resource.data.ownerId == request.auth.uid;
      
      // Update/Delete by owner or Admin
      allow update, delete: if isLeader() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }
  }
}
