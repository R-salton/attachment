rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CADET COMMANDER REPORTING SYSTEM - SECURITY RULES
     * 
     * Deployment Trigger: 2024-02-18 12:00:00 - Full system reset and permission fix.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Master lookup data
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /operationalUnits/{unitId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Reports collection
    match /reports/{reportId} {
      // allow read (get/list) for the owner. 
      // For 'list', the query MUST include a filter: where('ownerId', '==', auth.uid)
      allow read: if isOwner(resource.data.ownerId);
      
      // Allow creation if the user sets themselves as the owner
      allow create: if isOwner(request.resource.data.ownerId);
      
      // Allow update/delete only by the owner
      allow update: if isOwner(resource.data.ownerId) && request.resource.data.ownerId == resource.data.ownerId;
      allow delete: if isOwner(resource.data.ownerId);

      // Hierarchical subcollections (if any are used in the future)
      match /{allSubcollections=**} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/reports/$(reportId)).data.ownerId);
      }
    }
  }
}