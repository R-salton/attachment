rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'nezasalton@gmail.com';
    }

    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : {};
    }

    function hasProfile() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isCommander() {
      return isSignedIn() && (
        isAdmin() || 
        (hasProfile() && getUserData().role == 'COMMANDER')
      );
    }

    function isLeader() {
      return isSignedIn() && (
        isCommander() || 
        (hasProfile() && getUserData().role == 'LEADER')
      );
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email'])));
      allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Visibility: Admin and Commander see all. Others see their unit only.
      allow read: if isSignedIn() && (
        isAdmin() || 
        isCommander() || 
        (hasProfile() && resource.data.unit == getUserData().unit)
      );
      
      // Everyone who is signed in can now create reports
      allow create: if isSignedIn();
      
      // Everyone in the unit can edit any report in that unit
      allow update: if isSignedIn() && (
        isAdmin() || 
        isCommander() || 
        (hasProfile() && resource.data.unit == getUserData().unit)
      );
      
      allow delete: if isAdmin() || isCommander();
    }
  }
}