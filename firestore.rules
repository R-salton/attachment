rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'nezasalton@gmail.com' ||
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1'
      );
    }

    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : {};
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Allow broad list for Admins, Commanders, and Leaders.
      // Separate from the resource-dependent Trainee rule to avoid query optimization rejection.
      allow list: if isAdmin() || (isSignedIn() && (
        let role = getUserData().role;
        role == 'COMMANDER' || role == 'LEADER'
      ));

      // Allow unit-specific filtered list for Trainees.
      allow list: if isSignedIn() && (
        resource.data.unit == getUserData().unit
      );
      
      // Get operation: allow if admin, leader, commander, or unit matches
      allow get: if isAdmin() || (isSignedIn() && (
        let userData = getUserData();
        userData.role == 'COMMANDER' || 
        userData.role == 'LEADER' || 
        (resource.data.unit == userData.unit)
      ));
      
      allow create: if isSignedIn();
      
      allow update: if isAdmin() || (isSignedIn() && (
        let userData = getUserData();
        userData.role == 'COMMANDER' || 
        userData.role == 'LEADER' || 
        (resource.data.unit == userData.unit) ||
        (resource.data.ownerId == request.auth.uid)
      ));
      
      allow delete: if isAdmin() || (isSignedIn() && (
        let userData = getUserData();
        userData.role == 'COMMANDER' || 
        userData.role == 'LEADER'
      ));
    }
  }
}