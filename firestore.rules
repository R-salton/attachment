/**
 * @fileoverview Firestore Security Rules for the Cadet Commander Reporting System.
 *
 * Core Philosophy:
 * This ruleset implements ownership-based access control. 
 * All operational reports are owned by the creator (ownerId).
 *
 * Deployment Trigger: 2024-02-18 17:30 UTC - Explicitly allowing collection list for authenticated users
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper to check if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Helper to check if the user is the owner of the document.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Master data for companies and units.
     */
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /operationalUnits/{unitId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    /**
     * @description Main reports collection.
     */
    match /reports/{reportId} {
      // Allow any authenticated user to list the collection or get a specific report.
      // The application code filters by ownerId at the query level.
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      
      // Allow creation if the ownerId in the document data matches the auth UID.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow updates/deletes only for the owner.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Recursive match for all report-specific subcollections.
      match /{allSubcollections=**} {
        allow list, get: if isSignedIn();
        allow write: if isSignedIn() && (
          (resource != null && resource.data.ownerId == request.auth.uid) ||
          (resource == null && request.resource.data.ownerId == request.auth.uid)
        );
      }
    }

    /**
     * @description Commander role check (DBAC).
     */
    match /roles_cadet_commanders/{commanderId} {
      allow get: if isOwner(commanderId);
      allow list, write: if false;
    }
  }
}