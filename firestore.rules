rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'nezasalton@gmail.com' ||
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1'
      );
    }

    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : {};
    }

    function isCommander() {
      return isSignedIn() && (isAdmin() || getUserData().role == 'COMMANDER');
    }

    function isLeader() {
      return isSignedIn() && (isCommander() || getUserData().role == 'LEADER');
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'email'])));
      allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Allow list if Admin/Leader or if query is filtered by the user's unit
      allow list: if isSignedIn() && (
        isAdmin() || 
        isLeader() || 
        (getUserData().unit == resource.data.unit)
      );
      
      // Allow get for individual documents
      allow get: if isSignedIn() && (
        isAdmin() || 
        isLeader() || 
        (getUserData().unit == resource.data.unit)
      );
      
      allow create: if isSignedIn();
      
      allow update: if isSignedIn() && (
        isAdmin() || 
        isLeader() || 
        (getUserData().unit == resource.data.unit)
      );
      
      allow delete: if isSignedIn() && isLeader();
    }
  }
}