
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Unrestricted ADMIN check - Absolute bypass for command oversight
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'nezasalton@gmail.com' ||
        request.auth.uid == 'S7QoMkUQNHaok4JjLB1fFd9OI0g1' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN'
      );
    }

    // High command check (Commander, Leader)
    function isHighCommand() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'COMMANDER' || role == 'LEADER';
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /reports/{reportId} {
      // 1. COMMAND OVERWATCH
      // Administrators and High Command staff can list and get any report.
      // Explicitly allowing list without filters for these roles.
      allow list, get: if isAdmin() || isHighCommand();

      // 2. UNIT-SPECIFIC ACCESS (Trainees)
      // Trainees can only list reports filtered by their unit.
      allow list: if isSignedIn() && (
        resource.data.unit == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unit
      );
      
      allow get: if isSignedIn() && (
        resource.data.unit == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unit
      );
      
      // 3. OPERATIONAL FILING
      allow create: if isSignedIn();
      
      // 4. MODIFICATION
      allow update: if isSignedIn() && (
        isAdmin() || 
        resource.data.ownerId == request.auth.uid
      );
      
      // 5. ARCHIVE PURGING
      allow delete: if isAdmin();
    }
  }
}
